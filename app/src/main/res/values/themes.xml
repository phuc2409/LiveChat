<resources>

    <!-- Base application theme. -->
    <style name="Theme.LiveChat" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_content</item>

    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorSecondary">@color/purple_200</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@color/transparent</item>

    </style>

</resources>
